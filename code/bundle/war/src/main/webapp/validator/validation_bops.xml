		<item name="appName" dataType="Limit" max="32" msg="应用名称输入过长" />
		<item name="appStoreUrl" dataType="Require" msg="应用商店地址不为空" />
		<item name="appStoreUrl" dataType="Limit" max="128" msg="应用商店地址输入过长" />
		<item name="intro" dataType="Require" msg="应用介绍不为空" />
	</form>
	
	<form id="introForm">
